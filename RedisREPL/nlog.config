<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="/tmp/internal-nlog.txt" >
  <time type="FastUTC" />
  <targets>
    <target name="main" xsi:type="File"
              fileName="${shortdate}.log"
              layout="[${longdate}] ${message} ${exception:format=tostring}"
              concurrentWrites="false" keepFileOpen="false"/>
    <target name="debug" xsi:type="File"
                  fileName="debug-${shortdate}.log"
                  layout="[${longdate}] [${uppercase:${level}}] [${logger}] ${message} ${exception:format=tostring}"
                  concurrentWrites="false" keepFileOpen="false"/>
    <target name="console" xsi:type="ColoredConsole"
            layout="[${shortdate}] [${uppercase:${level}}] [${logger:shortName=true}] ${message} ${exception:format=tostring}" />
  </targets>
  <rules>
    <logger name="*" minlevel="Info" writeTo="main,console" />
    <logger name="*" level="Debug" writeTo="debug,console" enabled="true" />
  </rules>
</nlog>